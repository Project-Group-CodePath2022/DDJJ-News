<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        app:cardElevation="1dp"
        app:cardCornerRadius="4dp"
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingVertical="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:background="@drawable/circle"
                android:textSize="16sp"
                android:maxLines="1"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:id="@+id/blood_tvType"
                android:layout_centerVertical="true"
                android:layout_width="54dp"
                android:layout_height="54dp" />

            <TextView
                android:textSize="16sp"
                android:maxLines="1"
                android:padding="4dp"
                android:layout_toEndOf="@id/blood_tvType"
                android:textStyle="bold"
                android:id="@+id/blood_tvForName"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="14sp"
                android:id="@+id/blood_tvDesc"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="4dp"
                android:layout_toEndOf="@id/blood_tvType"
                android:layout_marginEnd="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/blood_tvForName"/>

            <TextView
                android:layout_alignParentEnd="true"
                android:textSize="12sp"
                android:padding="3dp"
                android:id="@+id/blood_tvCreatedAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/blood_tvType"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>