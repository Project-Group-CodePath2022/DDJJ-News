<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.LoginFragment" >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv1"
                android:layout_marginBottom="12dp"
                android:text="Make a request"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Spinner
                android:layout_below="@id/tv1"
                android:id="@+id/edGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:autofillHints="" />

            <EditText
                android:id="@+id/edForName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edGroup"
                android:inputType="text"
                android:layout_marginTop="7dp"
                android:textColorHint="@color/grey"
                android:textColor="@color/dark_black"
                android:hint="Name of the person"
                android:autofillHints="" />

            <EditText
                android:id="@+id/edDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edForName"
                android:inputType="text"
                android:layout_marginTop="7dp"
                android:textColorHint="@color/grey"
                android:textColor="@color/dark_black"
                android:hint="All little description"
                android:autofillHints="" />

            <Button
                android:id="@+id/btnSendRequestBlood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_below="@id/edDesc"
                android:text="Send"/>
        </RelativeLayout>
    </ScrollView>
</layout>