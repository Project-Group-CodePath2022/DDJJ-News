<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include android:id="@+id/dBloodAppBar" layout="@layout/toolbar"/>

        <TextView
            android:layout_below="@id/dBloodAppBar"
            android:id="@+id/tvForName"
            android:text="Request for JAMES DESTINE"
            android:textSize="26dp"
            android:padding="7dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/tvForName"
            android:id="@+id/tvQuantity"
            android:text="Needs for 4 units"
            android:textSize="16dp"
            android:padding="7dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/tvQuantity"
            android:id="@+id/tvWhenTo"
            android:text="10:00 - 12:00 PM"
            android:textSize="16dp"
            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/tvWhenTo"
            android:id="@+id/tvAddress"
            android:text="Delmas 33, location AKENSYEL"
            android:textSize="16dp"
            android:padding="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/actions"
            android:layout_below="@id/tvAddress"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:drawableLeft="@drawable/ic_baseline_call_24"
                android:text="Call me"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:drawableLeft="@drawable/ic_baseline_notifications_24"
                android:text="Accept &amp; Notify me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:layout_below="@id/actions"
            android:id="@+id/tv2"
            android:text="Notes"
            android:textSize="14dp"
            android:padding="7dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/tv2"
            android:id="@+id/tvDescription"
            android:text="You know I got money, I can pay you!"
            android:textSize="14dp"
            android:padding="7dp"
            android:layout_marginTop="7dp"
            android:textStyle="bold"
            android:minHeight="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/tvDescription"
            android:id="@+id/tv3"
            android:text="Location / map"
            android:textSize="14dp"
            android:padding="7dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <FrameLayout
            android:layout_below="@id/tv3"
            android:layout_marginTop="7dp"
            android:id="@+id/frameMap"
            android:minHeight="120dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
</layout>