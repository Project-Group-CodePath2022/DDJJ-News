<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.LoginFragment" >
    <ScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_marginVertical="12dp"
            android:padding="7dp"

            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv1"
                android:layout_marginBottom="12dp"
                android:text="Make a request"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:layout_below="@id/tv1"
                android:id="@+id/edGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginTop="7dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="Group blood"/>

            <EditText
                android:id="@+id/edForName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edGroup"
                android:inputType="textPassword"
                android:layout_marginTop="7dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="Name of the person"/>

            <EditText
                android:id="@+id/edDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/edForName"
                android:inputType="textPassword"
                android:layout_marginTop="7dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:hint="All litle description"/>

            <Button
                android:id="@+id/btnSendRequestBlood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"

                android:layout_below="@id/edDesc"
                android:text="@string/login_fragment_btn_register"/>
        </RelativeLayout>
    </ScrollView>
</layout>