<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Dialog.FullScreen" parent="Theme.AppCompat.Dialog">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="MyBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevation">7dp</item>
        <item name="android:background">@drawable/custom_bottom</item>
        <item name="itemBackground">@drawable/custom_item_bottom</item>
        <item name="tabTextAppearance">@style/TabText</item>
    </style>

    <style name="MyTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabPaddingStart">7dp</item>
        <item name="tabPaddingEnd">15.25dp</item>
        <item name="tabPaddingTop">5dp</item>
        <item name="tabPaddingBottom">5dp</item>
        <item name="tabIndicatorHeight">1.25dp</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabMaxWidth">250dp</item>
    </style>

    <style name="TabText" parent="@style/TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="TitleToolbar" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">17.5sp</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="elevation">7dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
